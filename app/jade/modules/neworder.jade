//- 新建来电订单
+modal('global-new-order', 'modal-lg')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 新建来电订单
	.modal-body
		form.form-horizontal
			fieldset
				legend 基本信息
				+hgroup
					+input('订单号', 'effective')(ng-model='gbOrder.order_no')
				+hgroup
					+order-type('订单类型', 'order-type')(ng-model='gbOrder.order_type')
				+hgroup
					+input('生效日期', 'effective')(ng-model='gbOrder.effective', uu-date-picker, start-view=1)
				+hgroup
					+input('截止日期', 'deadline')(ng-model='gbOrder.deadline', uu-date-picker)
				+hgroup
					+input('客户编号', 'customer-code')(ng-model='gbOrder.customer_code')
				+hgroup
					+yesno('是否有发票', 'has-invoice', '有', '无')(ng-model='gbOrder.has_invoice')
				+hgroup
					+order-source('订单来源', 'source')(ng-model='gbOrder.source')
				+hgroup
					+input('代理商编号', 'agent-code')(ng-model='gbOrder.agent_code')
				+hgroup
					+input('优惠码', 'coupon-code')(ng-model='gbOrder.coupon_code')
				+hgroup
					+input('折扣金额', 'discount-amount')(ng-model='gbOrder.discount_amount')
				+hgroup
					+input('付款金额', 'amount')(ng-model='gbOrder.amount')
				+hgroup
					+input('客户姓名', 'customer-name')(ng-model='gbOrder.customer_name')
				+hgroup
					+input('客户手机', 'customer-phone')(ng-model='gbOrder.customer_phone')
				+hgroup
					+input('客户地址', 'customer-addr')(ng-model='gbOrder.customer_addr')
				+hgroup
					+isPaid('是否付款', 'paid')(ng-model='gbOrder.paid')
				+hgroup
					+payment('付款方式', 'payment')(ng-model='gbOrder.payment')
				+hgroup
					+order-status('订单状态', 'status')(ng-model='gbOrder.status')
				+hgroup
					+input('订单有效期', 'validity')(ng-model='gbOrder.validity')
				+hgroup
					+input('下单时间', 'order-time')(ng-model='gbOrder.order_time', uu-date-picker)
				+hgroup
					+input('受理人', 'creator')(ng-model='gbOrder.creator')
				//- +hgroup
				//- 	+static-input('创建时间', 'create-time')(ng-bind='gbOrder.create_time')
				+hgroup
					+input('更新人', 'updater')(ng-model='gbOrder.updater')
				//- +hgroup
				//- 	+static-input('更新时间', 'update-time')(ng-bind='gbOrder.update_time')
				+hgroup
					+input('联系次数', 'contact-count')(ng-model='gbOrder.contact_count')
				//- +hgroup
				//- 	+input('客户', 'customer')(ng-model='gbOrder.customer')
				+hgroup
					+isValid('失效标识', 'yn')(ng-model='gbOrder.yn')

	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='saveGlobalOrder(gbOrder)') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消
