include ../../modules/mixins.jade

//- 顶部操作栏
+action-bar
	li
		+tooltip('新建', 'top')
			+glyphicon('plus')
		ul.dropdown-menu(role="menu")
			li
				+jslink('globalNewOrder()', '新建订单')
			li
				+jslink('globalNewTicket()', '新建工单')
	li
		+tooltip('', 'top', 'globalToggleSearch()')
			+glyphicon('search')
	li
		+tooltip('过滤条件', 'top')(class='dropdown-toggle')
			+glyphicon('filter')
		ul.dropdown-menu(role="menu")
			each filter in ['本月处理订单', '当日处理订单', '当日未处理订单', '当日完结订单', '预约客户订单']
				li
					a(href='')=filter

//- 搜索
include ../../modules/tri-search.jade

.article-header-operate
	ul.list-inline
		li
			+tooltip('删除', 'top')
				+glyphicon('trash')
		li
			+tooltip('添加知识', 'top', 'newKnowledge()')
				+glyphicon('file')
		li
			+tooltip('知识工具', 'top')
				+glyphicon('wrench')

table.uu-table
	+theadplus('knowledges')(operation='工具', ng-dblclick="chooseTh('table-cols')")
	tbody
		tr(ng-repeat='knowledge in knowledges')
			+tdchecker('knowledges', 'knowledge')(ng-model='knowledge.isChecked')
			td(ng-bind='knowledge.subject', ng-show='ths[0].isChecked')
			td(ng-show='ths[1].isChecked')
				+jslink('showknowledge(knowledge)')(ng-bind='knowledge.content')
			td(ng-bind='knowledge.author', ng-show='ths[2].isChecked')
			td(ng-bind='knowledge.category', ng-show='ths[3].isChecked')
			td(ng-bind='knowledge.pv', ng-show='ths[4].isChecked')
			td(ng-bind='knowledge.updateTime', ng-show='ths[5].isChecked')
			td
				+tooltip('编辑', 'top', 'showknowledge(knowledge)')
					+glyphicon('pencil') &nbsp;

				+tooltip('查看', 'top')
					+glyphicon('search')

uu-pagination(records='102', page='currentPage', model='searchModel', action='getknowledges()')

//- 添加知识Modal
+modal('new-knowlege')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 添加知识
	.modal-body
		form.form-horizontal
			.form-group
				+input('主题', 'subject')(ng-model='newknowledge.subject')
			.form-group
				+textarea('内容', 'responsor')(ng-model='order.responsor')
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='save()') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

//- 更改显示列
include ../../modules/table-ths.jade
