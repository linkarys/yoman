include ../../modules/mixins.jade

.article-header-search
	form.form-inline(role='form')
		.form-group
			select.form-control.input-sm(ng-model='searchModel.filter', ng-options='filter.value as filter.name for filter in majorFilters')
			select.form-control.input-sm(ng-model='searchModel.subfilter', ng-options='filter.value as filter.name for filter in subfilters')
			input.form-control.input-sm(ng-model='searchModel.keyword')
		.btn.uu-btn
			+tooltip('查询', 'top')
				+glyphicon('search')

.article-header-operate
	ul.list-inline
		li
			+tooltip('删除', 'top')
				+glyphicon('trash')
		li
			+tooltip('添加知识', 'top', 'newKnowledge()')
				+glyphicon('file')
		li
			+tooltip('知识工具', 'top')
				+glyphicon('wrench')

table.uu-table
	+thead(ng-dblclick="chooseTh('table-cols')")
		th
			.checkbox
				label
					input(type='checkbox', ng-model='isAllChecked', ng-init='isAllChecked=false' ng-click='toggleCheckAll("isAllChecked", knowledges)')
					| 全选
		th(ng-repeat='th in ths', ng-show='th.isChecked', ng-class='{"sort": th.sortable}', uu-sort="th.sortable", sort-name='th.name', action='sortBy(name, type)')
			| {{th.label}}
			+th-filter(ng-if='th.filter')
				+glyphicon('filter')
			ul.dropdown-menu(ng-if='th.filter')(role="menu")
				each filter in ['待审核', '审核中', '审核通过', '无效']
					li
						a(href='')=filter
		th 工具
	tbody
		tr(ng-repeat='knowledge in knowledges')
			td
				input(type='checkbox', ng-model="knowledge.isChecked", ng-click='checkIsAllChecked("isAllChecked", knowledges, knowledge)')
			td(ng-bind='knowledge.subject', ng-show='ths[0].isChecked')
			td(ng-show='ths[1].isChecked')
				+jslink('showknowledge(knowledge)')(ng-bind='knowledge.content')
			td(ng-bind='knowledge.author', ng-show='ths[2].isChecked')
			td(ng-bind='knowledge.category', ng-show='ths[3].isChecked')
			td(ng-bind='knowledge.pv', ng-show='ths[4].isChecked')
			td(ng-bind='knowledge.updateTime', ng-show='ths[5].isChecked')
			td
				+tooltip('编辑', 'top', 'showknowledge(knowledge)')
					+glyphicon('pencil') &nbsp;

				+tooltip('查看', 'top')
					+glyphicon('search')

uu-pagination(records='102', page='currentPage', model='searchModel', action='getknowledges()')

//- 添加知识Modal
+modal('new-knowlege')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 添加知识
	.modal-body
		form.form-horizontal
			.form-group
				+input('主题', 'subject')(ng-model='newknowledge.subject')
			.form-group
				+textarea('内容', 'responsor')(ng-model='order.responsor')
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='save()') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

