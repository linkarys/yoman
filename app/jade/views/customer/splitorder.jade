include ../../modules/mixins.jade

h2 拆分定单
hr

.criteria-bar
	form.form-inline(role='form')
		.form-group
			label(for='customer-scope') 查看范围
			select#customer-scope.form-control.input-sm(name='customerScope')
				+option('所有客户', 0)
				+option('潜在客户', 1)

		.btn.btn.uu-btn
			+tooltip('转移', 'top')
				+glyphicon('send')

		.btn.btn.uu-btn
			+tooltip('更多操作', 'top')
				+glyphicon('transfer')

.filter-bar
	.btn-group(data-toggle='buttons')
		label.btn.uu-btn.active
			input(checked, name='customer-type', type='radio')
			| 所有
		label.btn.uu-btn
			input(name='customer-type', type='radio')
			| 已付费
		label.btn.uu-btn
			input(name='customer-type', type='radio')
			| 未付费

table.uu-table
	+thead
		each th in ['客户姓名', '订单编号', '客户电话', '所在省', '城市', '订购类型', '付款状态', '创建时间', '联系次数', '工具']
			th=th
	tbody
		- var i = 3
		while (--i > 0)
			tr
				td 李四民
				td
					+jslink() 20141020
				td 15006492314
				td 山东
				td 青岛
				td 年度
				td 已付费
				td 20141018
				td 1
				td
					+tooltip('修改负责人', 'left')
						+glyphicon('pencil')
							&nbsp;

					+tooltip('发送消息', 'right')
						+glyphicon('comment')
