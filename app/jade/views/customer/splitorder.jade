include ../../modules/mixins.jade

//- 顶部操作栏
+action-bar
	li
		+tooltip('', 'top', 'globalToggleSearch()')
			+glyphicon('search')
	li
		+tooltip('过滤条件', 'top')(class='dropdown-toggle')
			+glyphicon('filter')
		ul.dropdown-menu(role="menu")
			each filter in ['本月处理订单', '当日处理订单', '当日未处理订单', '当日完结订单']
				li
					a(href='')=filter

//- 搜索
+linkage-search('search()')

//- 订单列表
table.uu-table(ng-show='orders.length')
	+theadplus()(operation='工具', ng-dblclick="chooseTh('table-cols')")
	tbody
		tr(ng-repeat='order in orders' ng-dblclick='showSplitModal(order)')
			td(ng-bind='order.customer.name', ng-show='ths[0].isChecked')
			td(ng-show='ths[1].isChecked')
				+jslink('showSplitModal(order)')(ng-bind='order.order_no')
			td(ng-bind='order.customer.phone', ng-show='ths[2].isChecked')
			td(ng-bind='order.customer.province', ng-show='ths[3].isChecked')
			td(ng-bind='order.customer.city', ng-show='ths[4].isChecked')
			td(ng-bind='order.order_type | orderType', ng-show='ths[5].isChecked')
			td(ng-bind='order.paid | payStatus', ng-show='ths[6].isChecked')
			td(ng-bind='order.audit | auditStatus', ng-show='ths[7].isChecked')
			td(ng-bind='order.create_time', ng-show='ths[8].isChecked')
			td(ng-bind='order.contact_count', ng-show='ths[9].isChecked')
			td.nowrap
				+tooltip('修改', 'top', 'showSplitModal(order)')
					+glyphicon('pencil') &nbsp;

				+tooltip('发送消息', 'top')
					+glyphicon('comment')

uu-pagination(records='orders.meta.recordsCount', per-page='orders.meta.pageSize' page='orders.meta.pageNo', model='searchModel', action='getOrderList()')

//- 核实订单Modal
+modal('split-form')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 查看订单
	.modal-body
		form.form-horizontal(name='splitForm')
			+order-details
			fieldset
				legend 订单
				table.uu-table
					+thead
						each th in ['订单编号', '客户姓名', '订单产品', '下单日期', '支付方式', '支付状态', '出生日期', '订单状态', '操作']
							th=th
					tbody
						tr
							td(ng-bind='currentOrder.id')
							td(ng-bind='currentOrder.customer.name')
							td(ng-bind='currentOrder.order_type | orderType')
							td(ng-bind='currentOrder.create_time')
							td(ng-bind='currentOrder.payment | payment')
							td(ng-bind='currentOrder.paid | payStatus')
							td(ng-bind='currentOrder.customer.birthday')
							td(ng-bind='currentOrder.order_status | orderStatus')
							td.nowrap
								+tooltip('拆分订单', 'top', 'splitOrder(splitForm)')
									+glyphicon('pencil') &nbsp;

								+tooltip('共享订单', 'top')
									+glyphicon('send')

			.modal-footer
				button.btn.uu-btn.btn-primary(data-dismiss='modal') 确定
				button.btn.uu-btn(data-dismiss='modal') 取消

+submodal('split-results')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 查看订单
	.modal-body
		table.uu-table
			+thead
				each th in ['序号', '订单号', '客户编号', '客户姓名', '客户地址', '付款金额', '发货数量', '是否有发票', '快递单号', '发货时间', '创建人', '发货单状态', '操作']
					th=th
			tbody
				tr(ng-repeat='(index, order) in currentOrder.splitedOrders')
					td(ng-bind='index + 1')
					td(ng-bind='order.orders_no')
					td(ng-bind='order.customer_code')
					td(ng-bind='order.customer_name')
					td(ng-bind='order.address')
					td(ng-bind='order.amount')
					td(ng-bind='order.shipped_qty')
					td(ng-bind='order.has_invoice | yesno')
					td(ng-bind='order.express_code')
					td(ng-bind='order.sent_date')
					td(ng-bind='order.creator')
					td(ng-bind='order.status | mapper:"shipmentStatus"')
					td
						+tooltip('编辑', 'top', 'editShipment(order)')
							+glyphicon('pencil')
						+tooltip('添加赠品', 'top', 'selectGift(currentOrder)')
							+glyphicon('plus')
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='saveSplitResult(currentOrder)') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

+submodal('shipment-form')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 编辑订单明细
	.modal-body
		form.form-horizontal(name='shipmentForm' novalidate ng-class='{sumitted: shipmentForm.$sumitted}')
			fieldset
				legend 订单明细
				table.form-table.form-single
					tr
						+input('快递公司', 'shipment-form-express')(ng-model='shipment.express_name')
						+input('快递公司编号', 'shipment-form-express-code')(ng-model='shipment.express_code')
					tr
						+input('快递单号', 'shipment-form-express-no')(uu-num ng-model='shipment.express_orders_no' required)
						+input('快递费用', 'shipment-form-express-cost')(uu-num ng-model='shipment.express_cost')
					tr
						+input('快递员', 'shipment-form-express-courier')(ng-model='shipment.courier')
						+input('快递员电话', 'shipment-form-express-courier-tel')(uu-phone ng-model='shipment.courier_tel' required)
					tr
						+shipment-status('发货单状态', 'shipment-status')(ng-model='shipment.status', required)
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='saveShipment(shipmentForm)') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

//- 选择赠品Modal
+submodal('gift-form')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 选择赠品
	.modal-body
		form.form-horizontal
			fieldset
				table.form-table.form-single
					tr
						+select('选择赠品', 'selectGift')(ng-model='order.gift')
							+option('生日礼品', 0)
							+option('促销赠品', 1)
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='saveOrder(order.orderSN)') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

