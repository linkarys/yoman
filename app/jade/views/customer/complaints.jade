include ../../modules/mixins.jade

//- 顶部操作栏
+action-bar
	li
		+tooltip('新建投诉', 'top', 'newComplaint()')
			+glyphicon('plus')
	li
		+tooltip('', 'top', 'globalToggleSearch()')
			+glyphicon('search')
	li
		+tooltip('过滤条件', 'top')(class='dropdown-toggle')
			+glyphicon('filter')
		ul.dropdown-menu(role="menu")
			each filter in ['本月处理订单', '当日处理订单', '当日未处理订单', '当日完结订单']
				li
					a(href='')=filter

//- 订单列表过滤条件
- var filters = []
- filters.push({label: '所有', value: ''})
- filters.push({label: '未处理', value: 1})
- filters.push({label: '处理中', value: 2})
- filters.push({label: '关闭', value: 3})
+article-header-filter('searchModel.status', filters)

//- 搜索
include ../../modules/tri-search.jade

//- 订单列表
table.uu-table(ng-show='complaintsOrders.length')
	+theadplus()(operation='工具', ng-dblclick="chooseTh('table-cols')")
	tbody
		tr(ng-repeat='complaint in complaintsOrders')
			td(ng-bind='complaint.customer.name', ng-show='ths[0].isChecked')
			td(ng-show='ths[1].isChecked')
				+jslink('showComplaint(complaint)')(ng-bind='complaint.order_no')
			td(ng-bind='complaint.customer.phone', ng-show='ths[2].isChecked')
			td(ng-bind='complaint.customer.province', ng-show='ths[3].isChecked')
			td(ng-bind='complaint.customer.city', ng-show='ths[4].isChecked')
			td(ng-bind='complaint.order_type | complainType', ng-show='ths[5].isChecked')
			td(ng-bind='complaint.paid | payStatus', ng-show='ths[6].isChecked')
			td(ng-bind='complaint.create_time', ng-show='ths[7].isChecked')
			td(ng-bind='complaint.contact_count', ng-show='ths[8].isChecked')
			td
				+tooltip('修改', 'top', 'showComplaintOrders(complaint)')
					+glyphicon('pencil') &nbsp;

				+tooltip('发送消息', 'top')
					+glyphicon('comment')

uu-pagination(records='complaintsOrders.meta.recordsCount', per-page='{{complaintsOrders.meta.pageSize}}' page='complaintsOrders.meta.pageNo', model='searchModel', action='getOrderList()')

//- 订单详情Modal
+modal('order-details', 'modal-lg')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 核实订单
	.modal-body
		form.form-horizontal
			+order-details
			fieldset
				legend 订单
				table.uu-table
					+thead
						each th in ['订单编号', '客户姓名', '订单产品', '下单日期', '支付方式', '支付状态', '出生日期', '订单状态', '操作']
							th=th
					tbody
						tr(ng-repeat='order in currentOrder.complaintOrders')
							td(ng-bind='order.orderSN')
							td(ng-bind='order.customerName')
							td(ng-bind='order.orderType')
							td(ng-bind='order.createTime')
							td(ng-bind='order.payWay')
							td(ng-bind='order.payStatus')
							td(ng-bind='order.birthday')
							td(ng-bind='order.payStatus | payStatus')
							td
								+tooltip('调换', 'top', 'exchange(order)')
									+glyphicon('gift') &nbsp;

								+tooltip('退货', 'top', 'return(order)')
									+glyphicon('export')

			p
				ul.list-inline
					li 联系记录
					li
						+tooltip('新建联系记录', 'top', 'addNewComplains(currentOrder)')
							+glyphicon('plus')
//- 调货Modal
+submodal('return-order', 'modal-lg')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 调货
	.modal-body
		form.form-horizontal.form-nowrap
			fieldset
				.row
					+hgroup
						+input('刊号', 'goodCode')(ng-model='goods.code')
					+hgroup
						+input('刊数', 'goodNum')(ng-model='goods.num')
				.row
					+hgroup
						+input('实际订阅刊数', 'subscribeNum')(ng-model='good.subscribeNum')
					+hgroup
						+input('实际订阅金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('合同金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('已收金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('已发货未收金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('刊数', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('办理手续费', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('承担人', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('退款手续费', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('承担人', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('退款金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('实际退款金额', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+input('退款帐号', 'subscribeAmount')(ng-model='good.subscribeAmount')
					+hgroup
						+input('开户行', 'subscribeAmount')(ng-model='good.subscribeAmount')
				.row
					+hgroup
						+select('退订原因', 'return-reason')(ng-model='goods.phoneStatus')
							+option('价格贵,收入低', 1)
							+option('价格贵,性价比不高', 2)
							+option('内容简单', 3)
							+option('内容太难', 4)
							+option('内容太普通,不感兴趣', 5)
							+option('学校老师教,发了同类产品', 6)
							+option('家人说不好', 7)
							+option('内容量太少', 8)
							+option('孩子不喜欢', 9)
							+option('质量不好', 10)
							+option('物流太慢', 11)
							+option('客服态度不好', 12)
							+option('书本缺页', 13)
							+option('赠品缺漏', 14)
							+option('玩具缺漏', 15)
							+option('光盘损坏', 16)
				.row
					+hgroup
						+select('是否到库', 'urgency')(ng-model='user.urgency')
							+option('是', 0)
							+option('否', 1)
	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='confirmAndShare()') 确认并共享
		button.btn.uu-btn(data-dismiss='modal') 取消

