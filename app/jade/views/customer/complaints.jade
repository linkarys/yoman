include ../../modules/mixins.jade

//- 顶部操作栏
+action-bar
	li
		+tooltip('新建投诉', 'top', 'addNewComplains()')
			+glyphicon('plus')
	li
		+tooltip('', 'top', 'globalToggleSearch()')
			+glyphicon('search')
	li
		+tooltip('过滤条件', 'top')(class='dropdown-toggle')
			+glyphicon('filter')
		ul.dropdown-menu(role="menu")
			each filter in ['当日投诉', '本月投诉', '处理中的投诉', '紧急投诉']
				li
					a(href='')=filter

//- 订单列表过滤条件
- var filters = []
- filters.push({label: '所有', value: ''})
- filters.push({label: '今日新增', value: 1})
- filters.push({label: '未处理', value: 2})
- filters.push({label: '处理中', value: 3})
- filters.push({label: '已完成', value: 4})
- filters.push({label: '非常紧急', value: 5})
+article-header-filter('searchModel.status', filters)

//- 搜索
+linkage-search

//- 订单列表
table.uu-table(ng-show='complaintsOrders.length')
	+theadplus()(operation='工具', ng-dblclick="chooseTh('table-cols')")
	tbody
		tr(ng-repeat='complaint in complaintsOrders')
			td(ng-bind='complaint.customer.name', ng-show='ths[0].isChecked')
			td(ng-show='ths[1].isChecked')
				+jslink('showComplaint(complaint)')(ng-bind='complaint.order_no')
			td(ng-bind='complaint.customer.phone', ng-show='ths[2].isChecked')
			td(ng-bind='complaint.customer.province', ng-show='ths[3].isChecked')
			td(ng-bind='complaint.customer.city', ng-show='ths[4].isChecked')
			td(ng-bind='complaint.order_type | complainType', ng-show='ths[5].isChecked')
			td(ng-bind='complaint.paid | payStatus', ng-show='ths[6].isChecked')
			td(ng-bind='complaint.create_time', ng-show='ths[7].isChecked')
			td(ng-bind='complaint.contact_count', ng-show='ths[8].isChecked')
			td
				+tooltip('修改', 'top', 'showComplaintOrders(complaint)')
					+glyphicon('pencil') &nbsp;

				+tooltip('发送消息', 'top')
					+glyphicon('comment')

uu-pagination(records='complaintsOrders.meta.recordsCount', per-page='{{complaintsOrders.meta.pageSize}}' page='complaintsOrders.meta.pageNo', model='searchModel', action='getOrderList()')

//- 新建投诉Modal
+modal('complaint-details')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 新建投诉
	.modal-body
		form.form-horizontal.form-nowrap
			fieldset
				.form-group
						+input('客户姓名', 'goodCode')(ng-model='complaint.customer_name')
				.form-group
						+input('联系电话', 'goodNum')(ng-model='complaint.customer_phone')
				.form-group
						+input('订单编号', 'goodCode')(ng-model='complaint.order_no')
				.form-group
						+static-input('投诉日期', 'goodNum')(ng-bind='complaint.contact_time')
				.form-group
						+static-input('处理人', 'contact-responsor')(ng-bind='currentUser.name')
				.form-group
						+complain-type('投诉分类', 'complain-type')(ng-model='complaint.complainType')
				.form-group
						+urgency-level('紧急程度', 'urgency')(ng-model='complaint.level')
				.form-group
						+deal-result('处理结果', 'deal-result')(ng-model='complaint.status')
				.form-group
						+input('下次回访日期', 'complaint-next-time')(ng-model='complaint.next_time', uu-date-picker, format='yyyy-mm-dd hh:ii', min-view='0')
				.form-group
					+textarea('详细说明', 'content-details')(ng-model="complaint.details")
				.form-group
					+textarea('处理描述', 'deal-desc')(ng-model="complaint.result_desc")

		.modal-footer
			button.btn.uu-btn.btn-primary(ng-click='saveComplaint(complaint)') 确认并共享
			button.btn.uu-btn(data-dismiss='modal') 取消

//- 订单详情Modal
+modal('order-details', 'modal-lg')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 核实订单
	.modal-body
		form.form-horizontal
			+order-details
			fieldset
				legend 订单
				table.uu-table
					+thead
						each th in ['订单编号', '客户姓名', '订单产品', '下单日期', '支付方式', '支付状态', '出生日期', '订单状态', '操作']
							th=th
					tbody
						tr(ng-repeat='order in currentOrder.complaintOrders')
							td(ng-bind='order.orderSN')
							td(ng-bind='order.customerName')
							td(ng-bind='order.orderType')
							td(ng-bind='order.createTime')
							td(ng-bind='order.payWay')
							td(ng-bind='order.payStatus')
							td(ng-bind='order.birthday')
							td(ng-bind='order.payStatus | payStatus')
							td
								+tooltip('调换', 'top', 'exchange(order)')
									+glyphicon('gift') &nbsp;

								+tooltip('退货', 'top', 'return(order)')
									+glyphicon('export')

			p
				ul.list-inline
					li 联系记录
					li
						+tooltip('新建联系记录', 'top', 'addNewComplains(currentOrder)')
							+glyphicon('plus')


//- 核实订单Modal
include ../../modules/contact-history.jade

//- 共享Modal
+submodal('share-order')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 共享
	.modal-body
		form.form-horizontal
			fieldset
				#tree

	.modal-footer
		button.btn.uu-btn.btn-primary(ng-click='saveOrder()') 保存
		button.btn.uu-btn(data-dismiss='modal') 取消

