include ../../modules/mixins.jade

//- 顶部操作栏
+action-bar
	li
		+tooltip('新建', 'top')
			+glyphicon('plus')
		ul.dropdown-menu(role="menu")
			li
				+jslink('globalNewOrder()', '新建订单')
			li
				+jslink('globalNewTicket()', '新建工单')
	li
		+tooltip('', 'top', 'globalToggleSearch()')
			+glyphicon('search')
	li
		+tooltip('过滤条件', 'top')(class='dropdown-toggle')
			+glyphicon('filter')
		ul.dropdown-menu(role="menu")
			each filter in ['本月处理订单', '当日处理订单', '当日未处理订单', '当日完结订单', '预约客户订单']
				li
					a(href='')=filter

//- 搜索
+linkage-search()
	+grouped-input('开始时间', 'start-time')(ng-model='searchModel.startTime', uu-date-picker, min-view='0', format='yyyy-mm-dd hh:ii')
	+grouped-input('结束时间', 'end-time')(ng-model='searchModel.startTime', uu-date-picker, min-view='0', format='yyyy-mm-dd hh:ii')

//- 过滤条件
- var filters = []
- filters.push({label: '今天', value: '""'})
- filters.push({label: '昨天', value: 0})
- filters.push({label: '前天', value: 1})
- filters.push({label: '近3天', value: 1})
- filters.push({label: '近7天', value: 1})
- filters.push({label: '近30天', value: 1})
+article-header-filter('sendTime', filters)


//- 工单列表
table.uu-table
	+theadplus()(operation='操作', ng-dblclick="chooseTh('table-cols')")
	tbody
		tr(ng-repeat='order in orders')
			td(ng-bind='order.customerName' ng-show='ths[0].isChecked')
			td(ng-bind='order.gender | gender' ng-show='ths[1].isChecked')
			+td-phone(ng-show='ths[2].isChecked' ng-bind='order.customer_phone')
			td(ng-bind='order.orderSN' ng-show='ths[3].isChecked')
			td(ng-bind='order.city' ng-show='ths[4].isChecked')
			td(ng-bind='order.workstart' ng-show='ths[5].isChecked')
			td(ng-bind='order.workend' ng-show='ths[6].isChecked')
			td(ng-bind='order.responser' ng-show='ths[7].isChecked')
			td(ng-bind='order.workStatus' ng-show='ths[8].isChecked')
			td(ng-bind='order.workType' ng-show='ths[9].isChecked')
			td.nowrap
				+tooltip('修改', 'top', 'update(employee)')
					+glyphicon('pencil') &nbsp;

				+tooltip('导出', 'top', 'export()')
					+glyphicon('export')


//- 工单详情Modal
+modal('order-details', 'modal-lg')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h4.modal-title 核实工单
	.modal-body
		form.form-horizontal
			+order-details
			fieldset
				legend 工单
				table.uu-table
					+thead
						each th in ['工单编号', '客户姓名', '工单产品', '下单日期', '支付方式', '支付状态', '出生日期', '工单状态', '操作']
							th=th
					tbody
						tr
							td 123071231
							td 李四民
							td 季度
							td 2014-10-15
							td 在线支付
							td 已支付
							td 2010-06-01
							td 正常
							td
								+tooltip('修改', 'left')
									+glyphicon('pencil') &nbsp;

								+tooltip('共享工单', 'top', 'shareOrder()')
									+glyphicon('send')

			p
				ul.list-inline
					li 联系记录
					li
						+tooltip('核实工单', 'top', 'addContact()')
							+glyphicon('plus')
					li
						+jslink('search()')
							+glyphicon('search')

